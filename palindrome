#include <stdio.h>

int main()
{
   int n,a,rem, rev = 0;
   printf("Give the number: ");
   scanf("%d",&n);
   a=n;
   while(n != 0){
   rem = n%10;

  rev = rev*10+rem;
  n= n/10;
   }
  if(a == rev){
      printf("The number is a palindrome");
  }else{
      printf("the number is not a palindrome");
  }
   
   

    return 0;
}
