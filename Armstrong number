#include <stdio.h>
#include<math.h>

int main()
{
   int temp,rem, sum = 0, digits = 0, n, t;
   
   printf("Enetr the number: ");
   scanf("%d",&n);
   
   temp = n;
   
   t = n;
   while(t != 0){
       digits++;
       t = t/10;
   }
   
   t = n;
   while(t != 0){
       rem = t%10;
       sum = sum + pow(rem,digits);
       t = t/10;
   }
   
   if(sum == n){
       printf("This is armstrong number");
   }
   else{
       printf("This is not armstrong number");
   }

    return 0;
}
