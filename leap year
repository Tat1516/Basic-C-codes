#include <stdio.h>
#include<stdbool.h>
bool leap(int n){
    if(n%400 == 0){
        return true;
    }else if(n%100 == 0){
        return false;
    }else if(n%4 == 0){
        return true;
    }
    return false;
    
}

int main()
{
    int a;
    printf("Enter the year:");
    scanf("%d",&a);
    if(leap(a)){
        printf("this is a leap year");
    }else{
        printf("It is not a leap year");
    }

    return 0;
}
