#include <stdio.h>

int main()
{
    int a,b,lcm;
    
    printf("enter the first value: ");
    scanf("%d",&a);
    printf("enter the second value: ");
    scanf("%d",&b);
    
    lcm = (a>b)?a:b;
    
    while(1){
        if(lcm % a == 0 && lcm % b == 0){
            printf("answer : %d",lcm);
            break;
        }
        lcm++;
    }
